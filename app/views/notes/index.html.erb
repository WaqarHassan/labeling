<h1>Listing notes</h1>
<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Ecr</th>
      <th>Created by</th>
      <th>Updated by</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td>
          <%= note.id %>
        </td>
        <td>
          <%= note.ecr_id %>
        </td>
        <td>
          <%= note.created_by %>
        </td>
        <td>
          <%= note.updated_by %>
        </td>
        <td>
          <%= note.description %>
        </td>
        <td>
          <%= link_to 'Show', note %>
        </td>
        <td>
          <%= link_to 'Edit', edit_note_path(note) %>
        </td>
        <td>
          <%= link_to 'Destroy', note, :method => :delete, :data => { :confirm => 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br/>
<%= link_to 'New Note', new_note_path %>
