<%= simple_form_for @ecr , remote: true , :html => { :id =>  "add_ecr_form"} do |f| %>
  
  <%= f.error_notification %>
  <div class="form-inputs">
  <div class= "form-group">
    <div class="row">
           <div class="col-lg-4">
                 <label for = "ecr_name" class="pull-right form-group echo_patinet control-label">NAME:</label>
          </div>
            <div class="col-lg-6">
            <%= f.input :name ,:label => false %>
            </div>
     </div>
  </div>
  <div class= "form-group">
    <div class="row">
           <div class="col-lg-4">
                 <label for = "ecr_status" class="pull-right form-group echo_patinet control-label">STATUS:</label>
          </div>
            <div class="col-lg-6">
            <%= f.input :status ,:label => false %>
            </div>
     </div>
  </div>
  <div class= "form-group">
    <div class="row">
           <div class="col-lg-4">
                 <label for = "ecr_note" class="pull-right form-group echo_patinet control-label">NOTE:</label>
          </div>
            <div class="col-lg-6">
            <%= f.input :note ,:label => false %>
            </div>
     </div>
  </div>
  <div class= "form-group">
    <div class="row">
           <div class="col-lg-4">
                 <label for = "ecr_station_id" class="pull-right form-group echo_patinet control-label">IA:</label>
          </div>
            <div class="col-lg-6">

             <%= f.select :ia_id, options_from_collection_for_select(@ium, 'id', 'name'),{include_blank: false}, :class=>'form-control'%>
           
            </div>
     </div>
  </div>

  </div>
<% end %>
