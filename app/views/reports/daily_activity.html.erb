<div class="row">
  <div class="col-lg-12 col-sm-12 report_heading"> 
    <h4>DAILY ACTVITY</h4>
  </div>
</div>

<div class='clearfix'></div> 
<div class='data-main'>

  <%= form_tag daily_activity_reports_path, remote: true, :id => 'search_form', :class => 'form-horizontal'  do %>
    <div class="row daily_activity_date">
        <div class="col-lg-2">
          <%= select_tag "work_flow", options_from_collection_for_select(@work_flows, 'id', 'name',@searched_work_flow),{include_blank: false, :class=>'form-control pnd-reqst pull-left'}  %> 
        </div>
      <div class="col-lg-2">
        <input type="text" class="datepicker_only form-control" id="datepicker_now" name = "daily_report_date" placeholder="Please Select Date"  required value="<%=@daily_report_date%>" >
      </div> 
      <div class="col-lg-2">
        <button type="submit" class="btn btn-primary" onclick="show_waiting_bar_daily_activity();">Search</button>
      </div>
    </div>
  <%end%>
    <div id="daily_activity_report_search_result_div">
      <% if @report_serach_result.present? %>
        <%= render 'reports/daily_activity_report' %>
      <% else %>
          <div class="alert daily-alert-report"> Do serach to view your report! </div>
      <% end %>
    </div> 
</div>
  <style type="text/css">
    .container{
        background-color: #fff;    
    }
  </style>		
  <script type="text/javascript">
  if (window.jQuery) {  
    $(document).ready(function() {
        $('.datepicker_only').datepicker({format: 'mm/dd/yyyy' , autoclose: true });
    })
  };
  </script>