          <% ia.ecrs.each do |ecr| %>
            <tr>
              <td></td>
              <td>5/19/2016  10:18 PM</td>
              <td>5/19/2016  10:18 PM</td>
              <td>5/19/2016  10:18 PM</td>
              <td>
                <% if ecr.inbox.present? %>
                  <%= link_to ecr.inbox.strftime("%m/%d/%Y %I:%M %p"), open_modal2_path,  {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#info_modal_popup2'} %>
