<div class="col-lg-2">
</div> 
<div class="col-lg-6">
  <%= form_for(@user, url: '/admin/users/'+@user.id.to_s, :html => {:class => "form-horizontal", id: 'new_user'}) do |f| %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :first_name, class: 'control-label col-sm-2' %>
      <div class="col-sm-10">
        <%= f.text_field :first_name, required: true, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :last_name, class: 'control-label col-sm-2' %>
      <div class="col-sm-10">
        <%= f.text_field :last_name, class: 'form-control' %>
      </div>  
    </div>
    <div class="form-group">
      <%= f.label :email, class: 'control-label col-sm-2' %>
      <div class="col-sm-10">
        <%= f.email_field :email, required: true, class: 'form-control' %>
      </div>  
    </div>
    <% if f.object.new_record? %>
      <div class="form-group">
        <%= f.label :password, class: 'control-label col-sm-2' %>
        <div class="col-sm-10">
            <%= f.password_field :password, required: true, class: 'form-control', autocomplete: 'off' %>
        </div>  
      </div>
    <% else %>
      <div class="form-group">
        <label for="user_password" class="control-label col-sm-2">New Password</label>
        <div class="col-sm-10">
          <%= f.password_field :password, class: 'form-control', autocomplete: 'off' %>
          <span class="help-block">Leave blank unless updating password</span>
        </div>  
      </div>    
    <% end %>

    <div class="actions">
      <%= f.submit ( f.object.new_record? ? "Create" : "Update"), :onclick => 'return check_password_length();', class: "btn save-print-update-edit-btn" %>
    </div>
  <% end %>
</div> 
<div class="col-lg-2">
</div>

<style type="text/css">
.container {
    background-color: #fff;
}
</style>  
