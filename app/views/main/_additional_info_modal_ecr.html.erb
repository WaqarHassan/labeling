<div class='modal-dialog'>
  <div class='modal-content'>
    <div class='modal-header'>
      <button class='close' data-dismiss='modal' type='button'>Ã—</button>
      <h1 class="h1-heading-popup">Additional Info</h1>
    </div>
    <div class='modal-body'>
       <form class="form-horizontal">

        <div class="form-group">
         <label class="col-lg-4 control-label">ECR:  </label>
          <div class="col-lg-6">
           
          <%=  link_to @ecr.name, add_nested_ecr_path(@ecr.id), {:remote => true, 'data-toggle' => "modal", 'data-target' => '#ecr_update_popup' , "data-dismiss" => "modal"} %>

          </div>
        </div>

        <div class="form-group">
         <label class="col-lg-4 control-label">Active </label>
          <div class="col-lg-6">
           <input type="checkbox" name="active" checked>
          </div>
        </div>

     <div class="form-group">
         <label class="col-lg-4 control-label">Station </label>
          <div class="col-lg-6">
           
            <select id="source" class="form-control" name="source">
                <% Station.all.each do |station| %>
                  <option value=""><%= station.name %></option>
                <% end %> 
           </select>
          </div>
     </div>

    <div class="form-group">
         <label class="col-lg-4 control-label">Date/Time </label>
         <div class="col-lg-5">
           <input type="text" class="datepicker form-control" id="datetimepicker_info" name="dob" required="" value="<%=Time.now.strftime("%m/%d/%Y %I:%M %p")%>"  aria-required="true">
         </div>
         <div class="col-lg-3 pull-left">
          <button class="btn btn-primary pull-left" onclick="set_current_timestamp(); return false;"  >Now</button>
         </div>
         
     </div>

      <div class="form-group">
         <label class="col-lg-4 control-label">Note </label>
          <div class="col-lg-6 ">
            <textarea class="form-control" col='50' id='notes' row='12' ></textarea>
        </div>
     </div>
    
      <span>
        <div class="form-group">
           <label class="col-lg-4 control-label">Archive </label>
            <div class="col-lg-6 ">
              <textarea class="form-control" col='50' id='notes' row='12' ></textarea>
            </div>
        </div> 
   </form>
    </div>
    <div class='modal-footer'>

      <button class='btn btn-danger' data-dismiss='modal' type='button'>Close</button>
      <button class='btn save-print-update-edit-btn' type='submit'>Save</button>
    </div>
  </div>
</div>
