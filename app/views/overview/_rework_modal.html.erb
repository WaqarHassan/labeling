<div class='modal-dialog'>
  <div class='modal-content'>
   <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">Ã—</button>
     <h1 class="h1-heading-popup">Rework</h1>
  </div>
    <div class='modal-body'>

      <form class="form-horizontal">
        <input type="hidden" value=<%=@wf_step_id%> name="id" >
        <div class="form-group">
           <label class="col-lg-4 control-label"><%= @label_name.name %>: </label>
           <div class="col-lg-6">
              <span id="" name=""><%= @l2.present? == true ? @l2.l1.name : '' %></span>
           </div>
       </div>
     <div class="form-group">
         <label class="col-lg-4 control-label"><%= @label_name2.name %>:</label>
         <div class="col-lg-6">
            <span id="" name=""><%= @l2.present? == true ? @l2.name : '' %> </span>
         </div>
     </div>
     <div class="form-group">
         <label class="col-lg-4 control-label"><%= @label_name3.name %>:</label>
         <div class="col-lg-6"> <span id="" name="">
                <% if @l2.present? 
                  @l2.l3s.each do |l3| %>
                  <%= l3.name%> <br> 
                <% end 
                end %>
              </span>
         </div>
     </div>
      <div class="form-group">
         <label class="col-lg-4 control-label">Rework Start</label>
         <div class="col-lg-6">
           <input type="text" class="form-control datetimepicker" id="datetimepicker" name="dob" required="" 
           value="<%=Time.now.strftime("%m/%d/%Y %I:%M %p")%>" aria-required="true">
         </div>
     </div>

      <div class="form-group">
        <label class="col-lg-4 control-label">Start rework at step</label>
        <div class="col-lg-6">
          <select id="source" class="form-control" name="source">
            <option value="">Step_1</option>
            <option value="Echo Alert In-Patient">Step_2</option>
         </select>
        </div>
      </div>

     <div class="form-group">
        <label class="col-lg-4 control-label">Station Initiating the rework</label>
        <div class="col-lg-6">
          <select id="source" class="form-control" name="source">
            <option value="">Please select station </option>
                <% Station.all.each do |station| %>
                  <option value=""><%= station.name %></option>
                <% end %> 
         </select>
         </div>
     </div>

      <div class="form-group">
         <label class="col-lg-4 control-label">Reason</label>
          <div class="col-lg-6">
            <select id="source" class="form-control" name="source">
              <option value="">Internal</option>
              <option value="Echo Alert In-Patient">External</option>
           </select>
           </div>
     </div>


       <div class="form-group">
         <label class="col-lg-4 control-label">#Comp</label>
          <div class="col-lg-6">
            <input type="text" id="source" class="form-control" name="source">   
          </div>
     </div>


      <div class="form-group">
        <label class="col-lg-4 control-label">Move Original Record Back to </label>
        <div class="col-lg-6">
          <select id="source" class="form-control" name="source">
            <option value="">Ecr-Complete</option>
            <option value="Echo Alert In-Patient">Ecr-Incomplete</option>
         </select>
         </div>
     </div>

   </form>

    </div>
    <div class='modal-footer'>
      <button class='btn btn-danger' data-dismiss='modal' type='button'>Close</button>
      <button class='btn save-print-update-edit-btn' type='submit'>Save</button>
    </div>
  </div>
</div>

 <%= javascript_include_tag "modal_form" %>
