
<div class='modal-dialog' style="width:450px">
  <div class='modal-content'>
    <%= form_tag save_reject_reason_path, remote: true, :id => 'save_reject_reason', :class => 'form-horizontal'  do %>
     
     <div class = 'errors__container'>
        <%= render 'layouts/messages' %>
     </div>
     <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">Ã—</button>
       <h1 class="h1-heading-popup">Reject Reason</h1>
    </div>
      <div class='modal-body'>
          <input type="hidden" value=<%=@l2.id%> name="id" >
  
          <% if @l2.present? || @l3.present?  %>
         <div class="form-group">
           <label class="col-lg-4 control-label"><%= @workflow.L2 %>: </label>
           <div class="col-lg-8">
              <span id="" name="">
                 <% if @l2.present?  %>
                      <%= @l2.name %>
              <% elsif @l3.present? %>
                  <%= @l3.l2.name %>
                  <% end %>
              </span>
           </div>
         </div>
         <%end%>
         <% if @l3.present? %>
          <div class="form-group">
             <label class="col-lg-4 control-label"><%= @workflow.L3 %>: </label>
             <div class="col-lg-8">
              <span id="" name="">
                
                 <% if @l3.present? %>
                      <%= @l3.name%> 
                <% end %>
              </span>
            </div>
          </div> 
          <%end%>
          <div class="form-group">
             <label class="col-lg-4 control-label"> <%= @st_name %>:</label>
              <div class="col-lg-8">
              <span id="" name=""><%= @st_step %></span>
            </div>
          </div>

           <div class="form-group">
             <label class="col-lg-4 control-label">Timestamp </label>
             <div class="col-lg-8">
              <input type="text" class="datetimepicker form-control" id="datetimepicker" name="workflow_live_step[actual_confirmation]" required value="<%=Time.now.strftime("%m/%d/%Y %I:%M %p")%>"  aria-required="true">
             </div> 
          </div>
    </div>
    <div class='modal-footer'>
      <button class='btn btn-danger' data-dismiss='modal' type='button'>Close</button>
      <button class='btn save-print-update-edit-btn' type='submit'>Update</button>
    </div>
   <% end %> 
  </div>
</div>

 <%= javascript_include_tag "modal_form" %>

