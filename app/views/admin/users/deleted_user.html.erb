<%= link_to 'Add New User', new_admin_user_path, class: 'add_new_user btn save-print-update-edit-btn' %>
<%= link_to 'Active Users', admin_users_path, class: 'add_new_user btn save-print-update-edit-btn' %>

<h1>Listing Users</h1>

<table id="admin_user_list" class="table table-striped">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Is Admin</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.is_admin ? 'Yes' : ''  %></td>
        <td><%= link_to 'Activate', activate_user_admin_user_path(user.id), onclick: 'confirm_action(event);'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<style type="text/css">
.container {
    background-color: #fff;
}
</style>
