<div class="handoff-report-data" id ="handoff_report_data">
  <table id = "entire_history_report" class="table table-bordered">
  <% if @task_confirmation.present? %> 
    <thead>
      <tr>
        <th><%= @workflow.L1 %></th>
        <th><%= @workflow.L2 %></th>
        <th><%= @workflow.L3 %></th>
        <th>DATE</th>
        <th>Station</th>
        <th>Step</th>
        <th>#Comp</th>
      </tr>
    </thead>

    <tbody>
      <% @report_l1s.each do |l1| %>

          <% l1_timestamp_logs = l1.timestamp_logs
            if l1_timestamp_logs.present?
              l1_timestamp_logs.each do |l1_timestamp_log| %>
                <tr>
                  <td>
                    <%= link_to l1.name, open_info_modal_l1_path(l1.id),  {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#info_modal_popup'} %>
                    <a href="/" aria-hidden="true" class="glyphicon glyphicon-new-window"></a> 
                  </td>
                  <td></td>
                  <td></td>
                  <td><%= l1_timestamp_log.actual_confirmation.strftime("%m/%d/%y %I:%M %p") %></td>
                  <td><%= l1_timestamp_log.workflow_live_step.station_step.step_name %></td>
                  <td><%= l1_timestamp_log.workflow_live_step.station_step.workflow_station.station_name %></td>
                  <td><%= l1.num_component %></td>
                </tr>
              <% end %>  
            <% else %>
              <tr>
                <td>
                  <%= link_to l1.name, open_info_modal_l1_path(l1.id,'report_info'),  {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#info_modal_popup'} %>
                  <%= form_tag reports_to_overview_path, :class => 'link_to_main_page' do %>
                    <%= hidden_field_tag 'object_type', 'L1' %>
                    <%= hidden_field_tag 'object_id', l1.id %>
                    <%= button_tag(type: "submit", class: "btn report_main_link") do %>
                        <span class="glyphicon glyphicon-new-window"></span>
                    <% end %>
                  <% end %>
                </td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
              </tr>
            <% end %>

        <% l1.get_searched_l2_objects(@l2_list).each do |l2| %>
          <% l2.timestamp_logs.each do |l2_timestamp_log| %>
            <tr>
              <td><%=l1.name%></td>
              <td>
                <%= link_to l2.name, open_info_modal_l2_path(l2.id,'report_info'),  {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#info_modal_popup'} %>
                <%= form_tag reports_to_overview_path, :class => 'link_to_main_page' do %>
                  <%= hidden_field_tag 'object_type', 'L2' %>
                  <%= hidden_field_tag 'object_id', l2.id %>
                  <%= button_tag(type: "submit", class: "btn report_main_link") do %>
                      <span class="glyphicon glyphicon-new-window"></span>
                  <% end %>
                <% end %>
              </td>
              <td></td>
              <td><%= l2_timestamp_log.actual_confirmation.strftime("%m/%d/%y %I:%M %p") %></td>
              <td><%= l2_timestamp_log.workflow_live_step.station_step.step_name %></td>
              <td><%= l2_timestamp_log.workflow_live_step.station_step.workflow_station.station_name %></td>
              <td><%= l2.num_component %></td>
            </tr>
          <% end %>  

        <% l2.get_searched_l3_objects(@l3_list).each do |l3| %>
          <% l3.timestamp_logs.each do |l3_timestamp_log| %>
            <tr>
              <td><%=l1.name%></td>
              <td><%=l2.name%></td>
              <td>                  
                <%= link_to l3.name, open_info_modal_l3_path(l3.id,'report_info'),  {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#info_modal_popup'} %>
                <%= form_tag reports_to_overview_path, :class => 'link_to_main_page' do %>
                  <%= hidden_field_tag 'object_type', 'L3' %>
                  <%= hidden_field_tag 'object_id', l3.id %>
                  <%= button_tag(type: "submit", class: "btn report_main_link") do %>
                      <span class="glyphicon glyphicon-new-window"></span>
                  <% end %>
                <% end %>
              </td>
              <td><%= l3_timestamp_log.actual_confirmation.strftime("%m/%d/%y %I:%M %p") %></td>
              <td><%= l3_timestamp_log.workflow_live_step.station_step.step_name %></td>
              <td><%= l3_timestamp_log.workflow_live_step.station_step.workflow_station.station_name %></td>
              <td><%= l3.num_component %></td>
            </tr>
          <% end %>
              <% end %>    
        <% end %>

      <% end %>  
    </tbody>

  </table>
  <%else %>
    <div class="alert alert-info"> No Task Confirmations found </a>
  <% end %>
</div>

  <style type="text/css">
    .container{
        background-color: #fff;    
    }
  </style> 

  <%= javascript_include_tag "reports" %>    

