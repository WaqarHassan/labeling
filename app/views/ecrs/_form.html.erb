<div class='modal-dialog'>
      <div class='modal-content'>
        <div class='modal-header'>
           <button type='button' class='close' data-dismiss='modal'>Ã—</button>
              <h1 class='h1-heading-popup'>Add ECR </h1>
         </div>
        <div class='modal-body' id="add_ecr_modal_body">

        <%= simple_form_for @ecr , remote: true , :html => { :id =>  "add_ecr_form"} do |f| %>
  
  <%= f.error_notification %>
  <div class="form-inputs">
  
 
 
  <div class= "form-group">
    <div class="row">
           <div class="col-lg-4">
                 <label for = "ecr_station_id" class="pull-right form-group echo_patinet control-label">IA:</label>
          </div>
            <div class="col-lg-6">

           <% if @show_projects == 'dropdown' %>
                <%= f.select :ia_id, options_from_collection_for_select(@ia, 'id', 'name'),{prompt: 'Please Select IA'}, :class=>'form-control'%>
            <% else %>
            
            <span class= "pull-left">
              <%= @ia_find.name %>
              </span>
            <% end %> 
           
            </div>
     </div>
  </div>

  <div class= "form-group">
    <div class="row">
           <div class="col-lg-4">
                 <label for = "ecr_name" class="pull-right form-group echo_patinet control-label">NAME:</label>
          </div>
            <div class="col-lg-6">
            <%= f.input :name ,:label => false %>
            </div>
     </div>
  </div>

  <div class= "form-group">
    <div class="row">
           <div class="col-lg-4">
                 <label for = "ecr_station_id" class="pull-right form-group echo_patinet control-label">Component Count:</label>
          </div>
            <div class="col-lg-6">

            <%= f.input :comp_count , :label => false  %>           
            </div>
     </div>
  </div>

  <div class= "form-group">
    <div class="row">
           <div class="col-lg-4">
                 <label for = "ecr_station_id" class="pull-right form-group echo_patinet control-label">Component Type:</label>
          </div>
            <div class="col-lg-6">
                   <%= f.select :comp_type, options_from_collection_for_select(@components, 'value', 'value'),{prompt: 'Please Select Component Type'}, :class=>'form-control'%>       
            </div>
     </div>
  </div>



  </div>
<% end %>


      </div>
      <div class="modal-footer">
        <button class="btn btn-danger" data-dismiss="modal" type="button">Close</button>
        <button class="btn save-print-update-edit-btn" type="submit" onclick="addEcrSubmit();" >Save</button>
    </div>
      </div>
  </div>








