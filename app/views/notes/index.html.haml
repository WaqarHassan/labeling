%h1 Listing notes

%table
  %thead
    %tr
      %th Id
      %th Ecr
      %th Created by
      %th Updated by
      %th Description
      %th
      %th
      %th

  %tbody
    - @notes.each do |note|
      %tr
        %td= note.id
        %td= note.ecr_id
        %td= note.created_by
        %td= note.updated_by
        %td= note.description
        %td= link_to 'Show', note
        %td= link_to 'Edit', edit_note_path(note)
        %td= link_to 'Destroy', note, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

